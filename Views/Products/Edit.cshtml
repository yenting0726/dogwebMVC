@model dogwebMVC.Models.Productdogweb

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Productdogweb</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(Model.PhotoPath))
    {
        <div class="form-group">
            <label>目前圖片：</label><br />
            <img src="@Model.PhotoPath" alt="產品圖片" style="max-width: 200px; max-height: 200px;" />
        </div>
    }
            <div class="form-group">
                <label for="PhotoPath" class="control-label">產品照片</label>
                <input name="PhotoPath" type="file" class="form-control" accept="image/*" />
                <span class="text-danger" id="photo-error"></span>
                <small class="form-text text-muted">支援格式：JPG, JPEG, PNG, GIF, JFIF (最大 5MB)</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
